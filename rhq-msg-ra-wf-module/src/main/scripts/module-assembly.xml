<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>module</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>${project.build.finalName}-module</baseDirectory>
    <fileSets>
        <!-- the files which only go in the zip, not in the jar -->
        <fileSet>
            <directory>${basedir}/src/main/resources/module</directory>
            <outputDirectory>/org/apache/activemq/ra</outputDirectory>
            <includes>
                <include>main/module.xml</include>
            </includes>
            <filtered>true</filtered>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/module-deps</directory>
            <outputDirectory>/org/apache/activemq/ra/main</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/org/apache/activemq/ra/main</outputDirectory>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>
                    <include>*</include>
                    <include>META-INF/ra.xml</include>
                </includes>
                <!-- exclude the jars that will be included as module dependencies in module.xml -->
                <excludes>
                    <exclude>commons-logging*</exclude>
                    <exclude>commons-pool*</exclude>
                    <exclude>geronimo*</exclude>
                    <exclude>log4j*</exclude>
                    <exclude>slf4j*</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>

